<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddProject">

    <TextView
            android:text="Nr XMLa"
            android:layout_width="352dp"
            android:layout_height="43dp"
            android:id="@+id/projectName2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:capitalize="words" android:textSize="24sp"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.488"
            android:layout_marginBottom="412dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/projectName"
            app:layout_constraintVertical_bias="0.059" android:id="@+id/textInputLayout">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nazwa projektu" android:id="@+id/projectInput" android:layout_weight="1"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
            android:text="Nazwa Projektu"
            android:layout_width="352dp"
            android:layout_height="43dp"
            android:id="@+id/projectName" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.082" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:capitalize="words" android:textSize="24sp"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.488"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/xmlLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nr XMLa" android:id="@+id/xmlNum"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:text="ACCEPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acceptButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/xmlLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.738" android:onClick="onAcceptButtonClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>